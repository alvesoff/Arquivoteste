// Modelo para as moedas com valores fixos (5, 10, 15)
model Moeda {
  id         Int      @id @default(autoincrement())
  nome        String
  valor       Int
  quantidade  Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("moedas")
}

// Modelo para o saldo total
model Saldo {
  id         Int      @id @default(autoincrement())
  valor       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("saldo")
}
